<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_resource_type_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_file" /> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/text_resource_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Resource Title Example" />

        <TextView
            android:id="@+id/text_resource_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="This is a brief description of the resource content..." />

        <TextView
            android:id="@+id/text_resource_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginTop="4dp"
            tools:text="Module: MATH101" />

        <TextView
            android:id="@+id/text_resource_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginTop="2dp"
            android:visibility="gone" tools:visibility="visible"
            tools:text="Filename: document.pdf" />

    </LinearLayout>

        <ImageView
            android:id="@+id/button_view_resource"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_open_in_new" android:contentDescription="View Resource"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="?attr/colorPrimary"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>